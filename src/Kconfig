  comment 'drivers'
  source src/drivers/Kconfig
endmenu

mainmenu_option next_comment
  comment 'lib'
  source src/lib/Kconfig
endmenu

mainmenu_option next_comment
  comment 'tasks'
  source src/tasks/Kconfig
endmenu

mainmenu_option next_comment
  comment 'main'
  source src/main/Kconfig
endmenu
