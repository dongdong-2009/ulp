mainmenu_option next_comment
	comment 'sys'
	source src/lib/sys/Kconfig
endmenu

if [ "$CONFIG_TASK_SHELL" = "y" ]; then
	mainmenu_option next_comment
		comment 'shell'
		source src/lib/shell/Kconfig
	endmenu	
fi

if [ "$CONFIG_TASK_OSD" = "y" ]; then
	mainmenu_option next_comment
		comment 'osd'
		source src/lib/osd/Kconfig
	endmenu	
fi
