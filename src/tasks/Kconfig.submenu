if [ "$CONFIG_TASK_MOTOR" = "y" ]; then
	mainmenu_option next_comment
		comment 'bldc'
		source src/tasks/bldc/Kconfig
	endmenu
fi

if [ "$CONFIG_TASK_VVT" = "y" ]; then
	mainmenu_option next_comment
		comment 'vvt'
		source src/tasks/vvt/Kconfig
	endmenu
fi

if [ "$CONFIG_TASK_STEPMOTOR" = "y" ]; then
	mainmenu_option next_comment
		comment 'stepmotor'
		source src/tasks/sm/Kconfig
	endmenu	
fi

