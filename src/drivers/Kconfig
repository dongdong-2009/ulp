#
# bldc configuration written in linux configuration language
#
# Written by miaofng@2010
#

bool "enable flash driver for stm32?" CONFIG_DRIVER_FLASH_STM32
if [ "$CONFIG_DRIVER_FLASH_STM32" = "y" ]; then
	int "Whole flash size KB?" CONFIG_FLASH_WHOLE_SIZE 64
	int "User flash size KB?" CONFIG_FLASH_USER_SIZE 4
fi
bool "enable spi bus driver for stm32?" CONFIG_DRIVER_SPI_STM32
bool "enable all motor related drivers?" CONFIG_DRIVER_MOTOR
bool "enable all vvt related drivers?" CONFIG_DRIVER_VVT
if [ "$CONFIG_DRIVER_VVT" = "y" ]; then
	define_bool CONFIG_DRIVER_AD9833 y
	define_bool CONFIG_DRIVER_MCP41X y
	define_bool CONFIG_DRIVER_DAC1X8S y
	define_bool CONFIG_DRIVER_MCAO y
	int "rpm dds mclk frequency Hz?" CONFIG_DRIVER_RPM_DDS_MCLK 25000000
	int "vss dds mclk frequency Hz?" CONFIG_DRIVER_VSS_DDS_MCLK 25000000
	int "knock dds mclk frequency Hz?" CONFIG_DRIVER_KNOCK_DDS_MCLK 25000000
	int "max knock sensor out voltage mVpp?" CONFIG_DRIVER_KNOCK_MVPP_MAX 255
fi
