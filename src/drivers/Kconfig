#
# bldc configuration written in linux configuration language
#
# Written by miaofng@2010
#

bool "bldc drivers?" CONFIG_DRIVER_MOTOR
bool "vvt drivers" CONFIG_DRIVER_VVT
if [ "$CONFIG_DRIVER_VVT" = "y" ]; then
	int "rpm dds mclk frequency Hz?" CONFIG_DRIVER_RPM_DDS_MCLK 25000000
	int "vss dds mclk frequency Hz?" CONFIG_DRIVER_VSS_DDS_MCLK 25000000
	int "knock dds mclk frequency Hz?" CONFIG_DRIVER_KNOCK_DDS_MCLK 25000000
	int "max knock sensor out voltage mVpp?" CONFIG_DRIVER_KNOCK_MVPP_MAX 255
fi
bool "stepper motor drivers?" CONFIG_DRIVER_STEPPERMOTOR
if [ "$CONFIG_DRIVER_STEPPERMOTOR" = "y" ]; then
	int "rpm dds mclk frequency Hz?" CONFIG_DRIVER_RPM_DDS_MCLK 25000000
	int "steppermotor steps per round?" CONFIG_STEPPERMOTOR_SPM 200
	bool "config step mode, half?" CONFIG_STEPPERMOTOR_HALFSTEP
	bool "config decay mode, fast?" CONFIG_STEPPERMOTOR_FASTDECAYSTEP
	bool "poweroff motor when in idle state?" CONFIG_STEPPERMOTOR_IDLE_POWEROFF
fi
bool "flash drivers of stm32" CONFIG_DRIVER_FLASH_STM32
bool "mac drivers of stm32" CONFIG_DRIVER_MAC_STM32
bool "spi bus driver for stm32?" CONFIG_DRIVER_SPI_STM32
bool "dds chip ad9833" CONFIG_DRIVER_AD9833
bool "digital pot chip mcp41x" CONFIG_DRIVER_MCP41X
bool "spi 8 ch 10bit dac chip dac1x8s" CONFIG_DRIVER_DAC1X8S
bool "lcd 1602 driver" CONFIG_DRIVER_LCD1602
bool "general keyboard driver" CONFIG_DRIVER_KEYBOARD
bool "adc key driver" CONFIG_DRIVER_ADCKEY
bool "general remote control driver" CONFIG_DRIVER_RCKEY
if [ "$CONFIG_DRIVER_RCKEY" = "y" ]; then
	choice 'remote control protocol'	" \
		rc5	CONFIG_RCKEY_PROTOCOL_RC5 \
	" rc5
fi
